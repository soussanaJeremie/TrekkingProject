extends /core/views/layout

block content
  head
      title
      .Bandeau
      section.small-12.medium-12.large-12.columns
        img(src='../src/images/Bandeau.png', style='margin-bottom: 5px')
        section.section
          .top-border
          .row
            .small-12.medium-12.large-12.small-centered.columns
            nav#nav
              div
                ul.inline-list-custom
                  li
                    a.current(href='/profil') Profil
                  li
                    a(href='/galerie') Galerie Photos
                  li
                    a(href='/PoI') Galerie Points d'intêret

        #conteneur_profil
          .test
              h3 Profil

              #conteneur_profil
                div
                  img.user(src='../src/images/user_logo.png', alt='user_logo')
                div  
                  .field
                    label Nom : #{user.lastname}
                    //input#nom(type='text', name='nom')
                    
                  .field
                    label Prénom : #{user.firstname}
                    //input#prenom(type='text', name='prenom')

                  .field
                    label Pseudo : #{user.username}
                    //input#pseudo(type='text', name='pseudo')

                  .field
                    label Mail : #{user.mail}
                    //input#mail(type='text', name='mail')

                  .field
                    label Password : #{user.password}
                    //input#password(type='text', name='password')

                  #conteneur_profil
                    button#btnEdit(onclick='updateUser()') MODIFIER
                    button#btnDelete(onclick='delUser()') SUPPRIMER

                
          .test2
            .row
              .small-12.medium-12.large-12.columns
                ul.small-block-grid-1.medium-block-grid-3.large-block-grid-3.inline-list-custom

                  - for trek in user.treks
                    li
                      .thumbnail
                        .thumbnail-img
                          .thumbnail-hover
                          img(src='../src/images/beach-2179624_1920.jpg', alt='Project 01')
                        .thumbnail-caption
                          a.caption-link(href='Detail.html') #{trek.label}                   

        .row
          .small-12.medium-12.large-12.columns
            p.back-to-top-holder
              a.back-to-top
                a(href='#')
                  i.fa.fa-chevron-circle-up.fa-3x
  
  script(src="/src/ajax.js")
  script(src="/src/loadUsers.js")
