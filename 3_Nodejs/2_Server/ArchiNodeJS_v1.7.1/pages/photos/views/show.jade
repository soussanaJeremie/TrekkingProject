extends layout

block content

    .row
      .small-12.medium-7.large-7.columns
        h2 #{photo.title}
          #container_details
            .photo_datas
              .field
                label#nom Nom de la photo : #{trek.label}
                  #labelDiv
                    input#title(type='text', value=photo.title)
                
            .row
              #buttons
                .update  
                    button#updatePhoto(onclick='LoadTreksManager.updatePhoto(#{photo.id})') Modifier Photo
                  .delete
                    button#deletPhoto(onclick='LoadTreksManager.deletePhoto(#{photo.id})') Supprimer Photo               
                  .saveupdate
                    button#saveUpdate(onclick='LoadTreksManager.saveUpdate(#{photo.id})') Sauvegarder modification
                  .cancelupdate
                    button#cancel(onclick='LoadTreksManager.cancelupdate(#{photo.id})') annuler modificattion

    h1 test
    h2 #{photo.title}
    h2 #{photo.id}
    h2 #{photo.date_photo}
    img(src=photo.url)
    #button
        .update
            button#updatePhoto(onclick='updatePhoto()') Modifier Photo

    script(src="/src/ajax.js")
    script(src="/src/loadPhotos.js")