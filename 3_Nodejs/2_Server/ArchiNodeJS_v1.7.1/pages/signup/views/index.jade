extends /core/views/layout

block content
  h2#trek Login
  title
  .Bandeau
    section.section
      .top-border
        .row
        .large-12
          nav#nav-under
            div
              ul.inline-list-custom
                li
                  a(href='/users') Profil
                li
                  a(href='/photos') Galerie Photos
                li
                  a(href='/PoI') Galerie Points d'intÃªret
                  .top-border
          .column
            .front-frame
              .front-frame-title Inscrivez-vous
              .ui.form
                .field
                  label Nom
                  input(name='lastname', id='nom', placeholder='Nom', type='text')
                .field
                  label Prenom
                  input(name='firstname', id='prenom', placeholder='Prenom', type='text')
                .field
                  label Pseudo
                  input(name='username', id='pseudo', placeholder='Pseudo', type='text')
                .field
                  label E-Mail
                  input(name='mail', id='mail', placeholder='email@provider.com', type='text')
                .field
                  label Mot de passe
                  input(name='password', id='password', type='password')
                .field
                  label Confirmer mot de passe
                  input(name='passwordConfirmation', id='passwordConfirmation', type='password')
                button.ui.button(id="registerBtn" type='submit') S'inscrire
                ul.notifications-container

  script(src="/src/ajax.js")
  script(src="/src/loadUsers.js")
  script(src="/src/signup.client.js")