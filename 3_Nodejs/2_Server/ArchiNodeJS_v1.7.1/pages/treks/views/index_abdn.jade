extends layout

block content
  h1#trek map
    
  head
      title 
      .Bandeau
      section.small-12.medium-12.large-12.columns
          img(src='src/View_from_connors_hill_panorama.jpg', style='margin-bottom: 5px')
          section.section
            .top-border
            .row
                .small-12.medium-12.large-12.small-centered.columns
                nav#nav
                  div
                    ul.inline-list-custom
                      li
                        a(href='/profil') Profil
                      li
                        a(href='/galerie') Galerie Photos
                      li
                        a(href='/PoI') Galerie Points d'intêret
          body
            #conteneur_carte
              .block1_infos
                table#idTableau(style='width:100%')
                  tr
                    td Nom du trek
                    td Distance du trek
                    td Temps estimé
                    td Difficulté    
                  tr
                    td#difficulte(name="difficulter")
                    td#temps(name='temps')
                    td#distance(name='distance')
                    td#nom(name='nom')                  

                a(href="")
                  button#detail(type="button") Détails trek                  
                  button#btnEdite(onclick='updateTrek()') Mettre à Jour
              .block2_maps
                div.map(onload="init()")
                   #map(style='height : 600px')
                div
                  table#coordonnees
                  teble#length
                   
              .block3_buttons
                select#idCombo(onchange="itineraire(infoTrek(idCombo.selectedIndex))")
                //- itineraire est une fonction jade qui prend un JSON en argument
                //- infoTrek(idCombo.selectedIndex) est une fonction qui ecrit du html de facon dynamique et renvoi parallelement un objet JSON (contenant la liste des points d'un itineraire)
                #buttons
                  .save
                      button#btnAdd(onclick='addTrek()') Sauvegarder
                  .raz
                      button(type="button") Reset
          .row
            .small-12.medium-12.large-12.columns
              p.back-to-top-holder
                a.back-to-top
                  a(href='#')
                      i.fa.fa-chevron-circle-up.fa-3x

  script(src="/src/ajax.js")
  script(src="/src/loadTreks.js")

  script(src='/src/leaflet/leaflet.js')
  script(src='/src/leaflet/leaflet.draw.js')
  script(src='/src/leaflet/leaflet-plugins-master/layer/vector/KML.js')
  script(src='https://api.mapbox.com/mapbox.js/plugins/leaflet-omnivore/v0.3.1/leaflet-omnivore.min.js')
  script(src='/src/carto.js')

